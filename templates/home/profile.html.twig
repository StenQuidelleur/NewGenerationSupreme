{% extends 'base.html.twig' %}

{% block title %}-Mon Profile{% endblock %}

{% block body %}
{% include 'home/news.html.twig' %}
<div class="container mt-5">
    <h1 class="text-center title">Mon Profile</h1>
    <a class="float-right" href="{{ path('app_logout') }}">Déconnexion</a>
    <div class="row mt-5 justify-content-between">
        <div class="col-md-6 mt-5">
            <h3>Mes commandes</h3>
            <a class="btn btn-dark my-3" data-toggle="collapse" href="#myOrders" role="button" aria-expanded="false" aria-controls="myOrders">Voir mes commandes</a>
            <div class="collapse" id="myOrders">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Référence</th>
                            <th scope="col">Détails</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.date | date("d/m/Y") }}</td>
                            <td>{{ order.status }}</td>
                            <td>{{ order.reference }}</td>
                            <td>
                                <a data-toggle="collapse" href="#{{ order.reference }}" role="button" aria-expanded="false" aria-controls="{{ order.reference }}">Détails</a>
                            </td>
                        </tr>
                        <tr class="collapse" id="{{ order.reference }}">
                            <td colspan="5">
                                <div class="card card-body">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>Produit</th>
                                            <th>Quantité</th>
                                            <th>Prix ( € )</th>
                                            <th>Total (TTC)</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for item in items %}
                                            <tr>
                                                <td><a href="{{ path('product_index', {'id': item.product.id}) }}">{{ item.product.name }}</a></td>
                                                <td>{{ item.quantity }}</td>
                                                <td>{{ item.product.price }}</td>
                                                <td>{{ item.quantity * item.product.price }} €</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6 mt-5">
            <h3 class="text-center mb-5 font-weight-bold">Informations</h3>
            <div class="d-flex justify-content-between">
                <div>
                    <p><strong>Nom :</strong> {{ user.firstname }}</p>
                    <p><strong>Prénom :</strong> {{ user.lastname }}</p>
                    <p><strong>Email :</strong> {{ user.email }}</p>
                </div>
                <div>
                    <p><strong>Naissance :</strong> {{ user.dateBirth }}</p>
                    <p><strong>Téléphone :</strong> {{ user.phone }}</p>
                </div>
            </div>
            <a href="{{ path('profile_edit', {'id': user.id}) }}">Modifier</a>
            <hr>
            <div class="d-flex mt-5 justify-content-between">
                <div>
                    <h5 class="mb-3 font-weight-bold">Adresse de livraison :</h5>
                    {% if shippingAddress != null %}
                        <p>{{ shippingAddress.firstname }} {{ shippingAddress.lastname }}</p>
                        <p>{{ shippingAddress.street }}</p>
                        <p>{{ shippingAddress.complement }}</p>
                        <p>{{ shippingAddress.zipCode }}</p>
                        <p>{{ shippingAddress.city }}</p>
                        <p>{{ shippingAddress.country }}</p>
                        <p>{{ shippingAddress.phone }}</p>
                        <a href="{{ path('shippingAddress_edit', {'id': shippingAddress.id}) }}">Modifier</a>
                    {% else %}
                    <a class="btn btn-primary" href="{{ path('address_newShipping') }}">Ajouter une adresse</a>
                    {% endif %}
                </div>
                <div>
                    <h5 class="mb-3 font-weight-bold">Adresse de facturation :</h5>
                    {% if billingAddress != null %}
                        <p>{{ billingAddress.firstname }} {{ billingAddress.lastname }}</p>
                        <p>{{ billingAddress.street }}</p>
                        <p>{{ billingAddress.complement }}</p>
                        <p>{{ billingAddress.zipCode }}</p>
                        <p>{{ billingAddress.city }}</p>
                        <p>{{ billingAddress.country }}</p>
                        <p>{{ billingAddress.phone }}</p>
                        <a href="{{ path('billingAddress_edit', {'id': billingAddress.id}) }}">Modifier</a>
                    {% else %}
                        <a class="btn btn-primary" href="{{ path('address_newBilling') }}">Ajouter une adresse</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}