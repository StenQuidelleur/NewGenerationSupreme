{% extends 'base.html.twig' %}


{% block body %}
{% include 'home/news.html.twig' %}
<div class="container mt-5">
    <div class="row flex-column justify-content-center">
        <h3 class="text-center font-weight-bold">Chercher un produit</h3>
        <div class="d-flex mb-5 mt-3 justify-content-center">
            <form method="post" class="form-inline my-2 my-lg-0 search">
                <input class="form-control mr-sm-2" name="name" type="search" placeholder="Search" aria-label="Search">
                <button class="btn my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </div>
    <div class="row">
        {% if products is defined %}
            {% for product in products %}
                <div class="card card-product mx-3 mb-5" style="width: 15rem;">
                    <a href="{{ path('product_index', {'id': product.id}) }}" class="subCateg ">
                        <img src="{{ asset('uploads/files/' ~ product.images[0]) }}" class="card-img-top card-product-image" alt="...">
                        <div class="card-body card-body-product my-2">
                            <h5 class="card-title text-center">{{ product.name }}</h5>
                            <p class="card-text text-center">{{ product.price }} €</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        {% else %}
            <p>Nous n'avons rien trouvé !</p>
        {% endif %}
    </div>
</div>
{% endblock %}