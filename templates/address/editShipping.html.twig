{% extends 'base.html.twig' %}

{% block title %}-Address{% endblock %}

{% block body %}
<div class="container col-md-6">
    <h1 class="text-center my-5">Modifier l'Adresse de livraison</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col">{{ form_row(form.firstname) }}</div>
        <div class="col">{{ form_row(form.lastname) }}</div>
    </div>
    <div class="row">
        <div class="col">{{ form_row(form.street) }}</div>
        <div class="col">{{ form_row(form.complement) }}</div>
    </div>
    {{ form_widget(form.email, {'attr': {'class': 'd-none'}}) }}
    {{ form_rest(form) }}
    <div class="col text-center">
        <button class="btn btn-dark">{{ button_label|default('Modifier') }}</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
