{% extends 'base.html.twig' %}

{% block title %}-Address{% endblock %}

{% block body %}
    <div class="container col-md-6">
        <h1 class="text-center my-5">Nouvelle Adresse</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col">{{ form_row(form.firstname) }}</div>
            <div class="col">{{ form_row(form.lastname) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.street) }}</div>
            <div class="col">{{ form_row(form.complement) }}</div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-success">{{ button_label|default('Valider') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
