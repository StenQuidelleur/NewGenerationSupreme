{% extends 'base.html.twig' %}

{% block title %}-Mon Compte{% endblock %}

{% block body %}
    <div class="container mt-5 col-sm-10 col-md-6">
        <h1 class="text-center">Mon Compte</h1>
        <div class="card my-5">
            <div class="container p-4">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté à {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 text-center font-weight-normal">Identifiez-vous</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mb-3 form-control" required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="mb-2 form-control" required>
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="checkbox my-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi !
                        </label>
                    </div>
                    <button class="btn btn-info" type="submit">Connexion</button>
                    <a class="float-right" href="{{ path('app_register') }}">Créer un compte !</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
